<div class="columns is-centered mt-6">
  <div class="column is-one-third">
    <div>
      <br>
      <%= render @entry %>
    </div>
    <br>
    <div class="buttons">
      <%= link_to "Edit", edit_entry_path(@entry), class:"button is-primary"%>
